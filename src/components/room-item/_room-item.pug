include ../star-rating/_star-rating.pug

mixin room-item(number,status, price, rewiews, rating, img)
    .room-item__inner
        .swiper
            .swiper-wrapper
                .swiper-slide.room-item__slider-item
                    a.room-item__slider-link(href="room-details.html")
                        img.room-item__slider-img(src=require(`./components/room-item/images/image-${img}.jpg`) alt=`image-${img}`)
                .swiper-slide.room-item__slider-item
                    a.room-item__slider-link(href="room-details.html")
                        img.room-item__slider-img(src=require(`./components/room-item/images/image-${img}.jpg`) alt=`image-${img}`)
                .swiper-slide.room-item__slider-item
                    a.room-item__slider-link(href="room-details.html")
                        img.room-item__slider-img(src=require(`./components/room-item/images/image-${img}.jpg`) alt=`image-${img}`)
                .swiper-slide.room-item__slider-item
                    a.room-item__slider-link(href="room-details.html")
                         img.room-item__slider-img(src=require(`./components/room-item/images/image-${img}.jpg`) alt=`image-${img}`)
            .swiper-pagination
            .swiper-button-prev
            .swiper-button-next
        .room-item__box
            .room-item__info
                .room-item__info-left
                    a.room-item__number(href="room-details.html") № 
                        span= number
                    a.room-item__status(href="room-details.html")= status
                .room-item__info-right
                    a.room-item__price(href="room-details.html")=price + "₽"
                        span в сутки
            .room-item__social
                +star-rating(rating)
                a.room-item__rewiews(href="room-details.html")= rewiews
                    span отзывов
